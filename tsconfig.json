{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma",
      "./src/plugin.d.ts"
    ],
    "resolveJsonModule": true, // Add this line
    "esModuleInterop": true // It's also a good idea to add this line
  }
}
